<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".RoutePlannerActivity" >

    <TextView
        android:id="@+id/textRoutePlannerCurrentRoute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/routePlannerCurrentRoute" />
    <ListView
        android:id="@+id/listRoutePlannerCurrentRoute"
        android:layout_width="wrap_content"
        android:layout_height="0px"
        android:layout_weight="1">   
    </ListView>
    <TextView
        android:id="@+id/textRoutePlannerAddPlaces"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/routePlannerAddPlaces"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal" >

	    <Button
	        android:id="@+id/buttonRoutePlannerFilters"
	        android:layout_width="0px"
	        android:layout_height="wrap_content"
	        android:gravity="center"
	        android:layout_weight="1"
	        android:text="@string/routePlannerButtonFilters" />
	    <ListView
	        android:id="@+id/listRoutePlannerAddPlaces"
	        android:layout_weight="4"
	        android:layout_width="0px"
	        android:layout_height="wrap_content">   
	    </ListView> 
    </LinearLayout>
    <Button
        android:id="@+id/buttonRoutePlannerStart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/routePlannerButtonContinue" />

</LinearLayout>